{
    "name": "decodelabs/tagged",
    "description": "PHP markup generation without the fuss",
    "type": "library",
    "keywords": ["markup", "html", "generator"],
    "license": "MIT",
    "authors": [{
        "name": "Tom Wright",
        "email": "tom@inflatablecookie.com"
    }],
    "require": {
        "php": "^8.0",
        "ext-intl": "*",
        "symfony/polyfill-mbstring": "^1.7",

        "decodelabs/coercion": "^0.2",
        "decodelabs/collections": "^0.7",
        "decodelabs/dictum": "^0.4",
        "decodelabs/elementary": "^0.2",
        "decodelabs/exceptional": "^0.4",
        "decodelabs/glitch-support": "^0.4",
        "decodelabs/veneer": "^0.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "phpstan/phpstan": "^1",
        "phpstan/extension-installer": "^1.0",
        "symplify/easy-coding-standard": "^11",

        "decodelabs/phpstan-decodelabs": "^0.6"
    },
    "suggest": {
        "nesbot/carbon": "Support for time interval formatting",
        "decodelabs/systemic": "Managed locale and timezone info"
    },
    "autoload": {
        "psr-4": {
            "DecodeLabs\\Tagged\\": "src/Tagged"
        },
        "files": [
            "src/global.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.14.x-dev"
        }
    },
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --no-progress",
        "psr12": "ecs check --no-progress-bar",
        "psr12-fix": "ecs check --no-progress-bar --fix"
    }
}
